<p id="notice"><%= notice %></p>

<h1>ร้านเกล็ดนที อาหารอีสาน Restaurants</h1>

<table class = "table table-bordered table-striped table-hover">
  <thead class = "thead-dark">
    <tr>
      <th class = "text-center" width = "20%">ชื่อ-นามสกุล Name</th>
      <th class = "text-center" width = "30%">ที่อยู่ Address</th>
      <th class = "text-center" width = "10%">เบอร์โทร Phone</th>
      <th class = "text-center" width = "15%">เว็บไซต์ Website</th>
      <th  class = "text-center" colspan="3"  width = "25%">การจัดการ Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td class="btn btn-primary"><%= link_to 'แสดง Show', restaurant %></td>
        <td class="btn btn btn-warning"><%= link_to 'แก้ไข Edit', edit_restaurant_path(restaurant) %></td>
        <td class="btn btn-danger"><%= link_to 'ลบ Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'เพิ่มร้านอาหารใหม่ New Restaurant', new_restaurant_path %></button>

